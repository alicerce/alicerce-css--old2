$color-bg = rgba(#5296A5, .5)
$color-pd = rgba(#A57548, .8)
$color-bd = rgba(#FCD7AD, .8)
$color-mg = rgba(#F6C28B, .8)
// 75DDDD

body
  --line-grid calc(var(--vertical-rhythm) / 16)
  background-color #fff
  background-image linear-gradient(90deg, #efefef var(--line-grid), transparent 0), linear-gradient(#ccc var(--line-grid), transparent 0), linear-gradient(#efefef var(--line-grid), transparent 0)
  background-size var(--vertical-rhythm) 100%, 100% calc(var(--vertical-rhythm) * 2), 100% var(--vertical-rhythm)
  background-position 0 0, 0 0, 0 0

  code
    color red

.demo

  &-grid
    color #333
    margin-bottom calc(var(--vertical-rhythm) * 2)
    margin-top calc(var(--vertical-rhythm) * 2)
    overflow hidden

    &:hover
      overflow-x auto

    [class*='row']
      --background-color $color-bg
      background-color var(--background-color)
      border-radius 5px
      min-height calc(var(--vertical-rhythm) * 4)
      position relative
      text-align center
      z-index 1


      &:after
        --visibility hiddenborder-radius 3px
        --opacity 0
        background $color-mg
        content 'margin row'
        display block
        font-size 8px
        height var(--margin-bottom)
        left calc(var(--vertical-rhythm) * 1)
        opacity var(--opacity)
        pointer-events none
        position absolute
        top 100%
        transition opacity .2s linear
        visibility var(--visibility)
        width calc(100% - calc(var(--vertical-rhythm) * 2))

      &:hover
        outline 2px dashed green
        outline-offset -2px
        z-index 2
        &:after
          --visibility visible
          --opacity 1



    [class*='column']
      --background-color $color-bg
      background-color var(--background-color)
      border-radius 5px
      color #333
      min-height calc(var(--vertical-rhythm) * 4)
      position relative
      text-align center
      transition color .2s linear
      z-index 2

      &:hover
        z-index 3
        color transparent

        &:before
          --visibility visible
          --opacity 1

        &:after
          --visibility visible
          --opacity 1
          --outline-color red

      &:before
        --visibility hidden
        --opacity 0
        // visibility var(--visibility)
        background-color #808080
        color white
        content attr(class)
        font-size 12px
        left 50%
        line-height 14px
        opacity var(--opacity)
        padding 0 6px
        position absolute
        top 50%
        transform translate(-50%, -50%)
        transition opacity .2s linear
        transition-delay .2s

      &:after
        --visibility hidden
        --opacity 0
        --outline-color transparent
        // visibility var(--visibility)
        background transparent
        border-left var(--padding) solid $color-pd
        border-right var(--padding) solid $color-pd
        content ''
        display block
        height calc(100% - 1px)
        left 1px
        opacity var(--opacity)
        outline 1px dashed
        outline-color var(--outline-color)
        pointer-events none
        position absolute
        top 1px
        transition opacity .2s linear, outline .2s linear
        width calc(100% - 1px)


