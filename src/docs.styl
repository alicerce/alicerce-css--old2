$color-bg = rgba(#8fb9c2, .8)
$color-pd = rgba(#c4d18b, .8)
$color-bd = rgba(#fcdf9d, .8)
$color-mg = rgba(#fcdf9d, .8)

body
  --line-grid calc(var(--vertical-rhythm) / 16)
  background-color: #fff;
  background-image: linear-gradient(90deg, #efefef var(--line-grid), transparent 0), linear-gradient(#ccc var(--line-grid), transparent 0), linear-gradient(#efefef var(--line-grid), transparent 0);
  background-size: var(--vertical-rhythm) 100%, 100% calc(var(--vertical-rhythm) * 2), 100% var(--vertical-rhythm)
  background-position: 0 0, 0 0, 0 0;

  code
    color red


.demo

  &-grid
    margin-top calc(var(--vertical-rhythm) * 2)
    margin-bottom calc(var(--vertical-rhythm) * 2)
    overflow hidden
    color: #333

    &:hover
      overflow-x auto

    [class*='row']
      --background-color $color-bg
      background-color var(--background-color)
      min-height calc(var(--vertical-rhythm) * 4)
      position relative
      text-align center
      z-index 1

      &:after
        --visibility hidden
        --opacity 0
        background $color-mg
        content 'margin row'
        display block
        font-size 8px
        height var(--margin-bottom)
        left calc(var(--vertical-rhythm) * 1)
        opacity var(--opacity)
        pointer-events none
        position absolute
        top 100%
        transition opacity .2s linear
        visibility var(--visibility)
        width calc(100% - calc(var(--vertical-rhythm) * 2))

      &:hover
        outline 2px dashed green
        outline-offset -2px
        z-index 2
        &:after
          --visibility visible
          --opacity 1



    [class*='column']
      --background-color $color-bg
      background-color var(--background-color)
      min-height calc(var(--vertical-rhythm) * 4)
      position relative
      text-align center
      z-index 2
      color #333
      transition: color .2s linear

      &:hover
        z-index 3
        color transparent

        &:before
          --visibility visible
          --opacity 1

        &:after
          --visibility visible
          --opacity 1
          --outline-color red

      &:before
        --visibility hidden
        --opacity 0
        content: attr(class);
        position: absolute;
        top: 50%;
        left: 50%;
        background-color: #808080;
        font-size: 12px;
        line-height: 14px;
        padding: 0 6px;
        transform: translate(-50%, -50%);
        border-radius: 3px;
        color: white;
        // visibility var(--visibility)
        opacity var(--opacity)
        transition: opacity .2s linear
        transition-delay: .2s

      &:after
        --visibility hidden
        --opacity 0
        --outline-color transparent
        // visibility var(--visibility)
        background transparent
        border-left var(--padding) solid $color-pd
        border-right var(--padding) solid $color-pd
        content ''
        display block
        height calc(100% - 1px)
        left 1px
        opacity var(--opacity)
        outline 1px dashed
        outline-color var(--outline-color)
        pointer-events none
        position absolute
        top 1px
        transition opacity .2s linear, outline .2s linear
        width calc(100% - 1px)


