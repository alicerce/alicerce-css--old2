// Margin
noMargin()
  &no_margin
    margin 0
    &-top
      margin-top 0
    &-right
      margin-right 0
    &-bottom
      margin-bottom 0
    &-left
      margin-left 0
    &-horizontal
      margin-left 0
      margin-right 0
    &-vertical
      margin-bottom 0
      margin-top 0

// Padding
noPadding()
  &no_padding
    --padding 0
    &-top
      padding-top 0
    &-right
      padding-right 0
    &-bottom
      padding-bottom 0
    &-left
      padding-left 0
    &-horizontal
      padding-left 0
      padding-right 0
    &-vertical
      padding-bottom 0
      padding-top 0


// Responsive
+generateForBreakpoints()
  noPadding()
  noMargin()
