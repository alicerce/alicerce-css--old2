/*
# Base/Grid

thanks to [CSS Grid with Variables](https://codepen.io/jacobberglund/pen/bwxxRy) by @jacobberglund


*/
$columns ?= 12

:root
  --columns $columns
  --gutter 14px

.container
  display flex
  flex-direction row
  flex-wrap wrap

.section
  padding calc(var(--gutter) * 3) calc(var(--gutter) * 1.5)

  & + .section
    padding-top 0

.row
  --align-items stretch
  --flex-direction row
  --flex-wrap wrap
  --justify-content flex-start
  --margin-bottom var(--gutter)
  align-content stretch
  align-items var(--align-items)
  display flex
  flex-direction var(flex-direction)
  flex-wrap var(--flex-wrap)
  justify-content var(--justify-content)
  margin-bottom var(--margin-bottom)
  outline 1px dashed green
  width 100%

  &.is
    &-row
      --flex-direction row
    &-column
      --flex-direction column

  &.no
    &-break
      --flex-wrap nowrap
    &-margin
      --margin-bottom 0

  &.align
    &-vertical
      &--top
        --align-items flex-start
      &--center
        --align-items center
      &--bottom
        --align-items flex-end
    &-horizontal
      &--left
        --justify-content flex-start
      &--center
        --justify-content center
        &--spaced
          --justify-content space-around
        &--justify
          --justify-content space-between
      &--right
        --justify-content flex-end

// .column
[class*="column-"]
  --align-self auto
  --order 1
  --padding var(--gutter)
  align-self var(--align-self)
  display block
  flex-basis calc((100% / var(--columns)) * var(--column-width))
  order var(--order)
  padding-left var(--padding)
  padding-right var(--padding)

  &.align
    &-vertical
      &--top
        --align-self flex-start
      &--center
        --align-self center
      &--bottom
        --align-self flex-end

  &.no-padding
    --padding 0

  +generateForBreakpoints()
    &-no-paddinga
      --padding 0

  & > .row
    width calc(100% + calc(var(--gutter) * 2))
    margin-left calc(var(--gutter) * -1)

// Size
  // default code
  sizeDefault($prop)
    for $col in (1..$columns)
      &{$prop}column-is_{$col}
        --column-width $col
  // default
  sizeDefault('.')
  // Responsive
  +generateForBreakpoints()
    sizeDefault('-')

// Order
  sizeDefault($prop)
    for $col in (1..$columns)
      &{$prop}is_order_{$col}
        --order $col
  // Default
  sizeDefault('.')
  // Responsive
  +generateForBreakpoints()
    sizeDefault('-')
